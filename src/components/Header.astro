---
import presentation from "../data/presentation_data";
---

<header class="header">
  <div class="header-container">
    <div class="logo">
      <a href={`mailto:${presentation.mail}`}>{presentation.mail}</a>
    </div>
    <div class="spacer"></div>
    <nav>
      <ul>
        <li><a href="#about">About</a></li>
        <li><a href="#projects">Project</a></li>
        <li><a id="themeToggle" class="unselectable">Switch~Theme</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .unselectable {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -ms-user-select: none;
  }

  .header .header-container {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: start;
  }

  .header nav {
    padding: 64px;
  }

  .header nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
  }

  .header nav ul li {
    margin-right: 16px;
  }

  a {
    all: unset;
  }

  a:hover {
    color: var(--primary);
    cursor: pointer;
    transition: 500ms;
  }

  @media (max-width: 700px) {
    .header nav {
      padding: 0px;
      margin-bottom: 42px;
    }

    .header nav ul {
      margin-top: 16px;
    }

    .header .header-container {
      flex-direction: column;
      align-items: start;
    }
  }
</style>

<script is:inline>
const themes = [];
for (let i = 1; i <= 10; i++) {
  themes.push("theme" + i);
}

const handleToggleClick = () => {
  const body = document.getElementById("theme-body");
  body.className = themes[Math.floor(Math.random() * themes.length)];
};

document
  .getElementById("themeToggle")
  .addEventListener("click", handleToggleClick);
</script>
